{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "pnpm install",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "pnpm build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Build Core",
            "type": "shell",
            "command": "pnpm --filter @basket-bot/core build",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Initialize Database",
            "type": "shell",
            "command": "pnpm db:init",
            "options": {
                "cwd": "${workspaceFolder}/apps/backend"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Dev: All Apps",
            "type": "shell",
            "command": "pnpm dev",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*started server.*$",
                    "endsPattern": "^.*Ready in.*$"
                }
            }
        },
        {
            "label": "Dev: Backend Only",
            "type": "shell",
            "command": "pnpm dev",
            "options": {
                "cwd": "${workspaceFolder}/apps/backend"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "(Local:|ready)"
                }
            }
        },
        {
            "label": "Dev: Mobile Only",
            "type": "shell",
            "command": "pnpm dev",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "ready in"
                }
            }
        },
        {
            "label": "Dev: All Apps",
            "type": "shell",
            "command": "pnpm lint",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$eslint-stylish"]
        },
        {
            "label": "Type Check: All",
            "type": "shell",
            "command": "pnpm type-check",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Mobile: Build & Sync Android",
            "type": "shell",
            "command": "pnpm build && pnpm cap:sync",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Mobile: Run on Android",
            "type": "shell",
            "command": "pnpm android",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Dev: Full Stack Android",
            "dependsOn": ["Dev: Backend Only", "Dev: Mobile Only", "Mobile: Run on Android"],
            "dependsOrder": "parallel",
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "Mobile: Build Production APK",
            "type": "shell",
            "command": "pnpm android:prod",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Mobile: Open Android Studio",
            "type": "shell",
            "command": "pnpm cap:open:android",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
