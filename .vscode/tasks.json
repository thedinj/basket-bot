{
    "version": "2.0.0",
    "tasks": [
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // Setup & Build Tasks (Production)
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        {
            "label": "Setup: Install Dependencies",
            "type": "shell",
            "command": "pnpm install",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build: All Packages",
            "type": "shell",
            "command": "pnpm build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Build: Core Package",
            "type": "shell",
            "command": "pnpm --filter @basket-bot/core build",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Build: Mobile for Android",
            "type": "shell",
            "command": "pnpm build && pnpm cap:sync",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build: Production APK",
            "type": "shell",
            "command": "pnpm build:prod && pnpm cap:sync:prod && cd android && .\\gradlew.bat assembleRelease",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Build: Debug APK",
            "type": "shell",
            "command": "pnpm build && pnpm cap:sync && cd android && .\\gradlew.bat assembleDebug",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup: Initialize Database",
            "type": "shell",
            "command": "pnpm db:init",
            "options": {
                "cwd": "${workspaceFolder}/apps/backend"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup: Run Database Migrations",
            "type": "shell",
            "command": "pnpm db:migrate",
            "options": {
                "cwd": "${workspaceFolder}/apps/backend"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup: Generate Mobile Icons",
            "type": "shell",
            "command": "pnpm capacitor-assets generate",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // Development Tasks (Hot-reload / Live-updating)
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        {
            "label": "Dev: Backend (Hot-reload)",
            "type": "shell",
            "command": "pnpm dev",
            "options": {
                "cwd": "${workspaceFolder}/apps/backend"
            },
            "isBackground": true,
            "runOptions": {
                //"runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "(Local:|ready)"
                }
            }
        },
        {
            "label": "Dev: Mobile (Hot-reload)",
            "type": "shell",
            "command": "pnpm dev",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "ready in"
                }
            }
        },
        {
            "label": "Dev: Mobile on Android Emulator",
            "type": "shell",
            "command": "pnpm android:dev",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "isBackground": true,
            "dependsOn": ["Dev: Mobile (Hot-reload)"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            },
            "problemMatcher": []
        },
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // Production/Release Tasks
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        {
            "label": "Prod: Backend (Build)",
            "type": "shell",
            "command": "pnpm build",
            "options": {
                "cwd": "${workspaceFolder}/apps/backend"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Prod: Backend (Start)",
            "type": "shell",
            "command": "pnpm start",
            "options": {
                "cwd": "${workspaceFolder}/apps/backend"
            },
            "isBackground": true,
            "dependsOn": ["Prod: Backend (Build)"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "prod"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "(Local:|ready|started server)"
                }
            }
        },
        {
            "label": "Prod: Mobile (Build)",
            "type": "shell",
            "command": "pnpm build:prod",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Prod: Mobile (Preview)",
            "type": "shell",
            "command": "pnpm preview",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "isBackground": true,
            "dependsOn": ["Prod: Mobile (Build)"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "prod"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "(Local:|ready)"
                }
            }
        },
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // Utility Tasks
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        {
            "label": "Terminate All Tasks",
            "command": "echo ${input:terminate}",
            "type": "shell",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}
