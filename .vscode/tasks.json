{
    "version": "2.0.0",
    "tasks": [
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // Setup & Build Tasks (Production)
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        {
            "label": "Setup: Install Dependencies",
            "type": "shell",
            "command": "pnpm install",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build: All Packages",
            "type": "shell",
            "command": "pnpm build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Build: Core Package Only",
            "type": "shell",
            "command": "pnpm --filter @basket-bot/core build",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Build: Mobile for Android",
            "type": "shell",
            "command": "pnpm build && pnpm cap:sync",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build: Production APK",
            "type": "shell",
            "command": "pnpm android:prod",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup: Initialize Database",
            "type": "shell",
            "command": "pnpm db:init",
            "options": {
                "cwd": "${workspaceFolder}/apps/backend"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // Development Tasks (Hot-reload / Live-updating)
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        {
            "label": "Dev: Backend (Hot-reload)",
            "type": "shell",
            "command": "pnpm dev",
            "options": {
                "cwd": "${workspaceFolder}/apps/backend"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "(Local:|ready)"
                }
            }
        },
        {
            "label": "Dev: Mobile (Hot-reload)",
            "type": "shell",
            "command": "pnpm dev",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "ready in"
                }
            }
        },
        {
            "label": "Dev: Full Stack (Web Preview, Hot-reload)",
            "dependsOn": ["Dev: Backend (Hot-reload)", "Dev: Mobile (Hot-reload)"],
            "dependsOrder": "parallel",
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "Dev: Full Stack (Native Android, Hot-reload)",
            "dependsOn": [
                "Dev: Backend (Hot-reload)",
                "Dev: Mobile (Hot-reload)",
                "Dev: Run Android (Debug)"
            ],
            "dependsOrder": "parallel",
            "group": "none",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "Dev: Run Android (Debug)",
            "type": "shell",
            "command": "pnpm android:dev",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // Testing & Validation Tasks
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        {
            "label": "Test: Lint All",
            "type": "shell",
            "command": "pnpm lint",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$eslint-stylish"]
        },
        {
            "label": "Test: Type Check All",
            "type": "shell",
            "command": "pnpm type-check",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "Test: Run Android (Production Build)",
            "type": "shell",
            "command": "pnpm android",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // Utility Tasks
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        {
            "label": "Util: Open Android Studio",
            "type": "shell",
            "command": "pnpm cap:open:android",
            "options": {
                "cwd": "${workspaceFolder}/apps/mobile"
            },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
