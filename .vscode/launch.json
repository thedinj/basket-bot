{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/backend",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["dev"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            },
            "preLaunchTask": "Build Core"
        },
        {
            "name": "Debug Backend (Attach)",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "skipFiles": ["<node_internals>/**"],
            "restart": true,
            "localRoot": "${workspaceFolder}/apps/backend",
            "remoteRoot": "${workspaceFolder}/apps/backend"
        },
        {
            "name": "Debug Mobile",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8100",
            "webRoot": "${workspaceFolder}/apps/mobile",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/src/*"
            },
            "preLaunchTask": "Dev: Mobile Only"
        },
        {
            "name": "Debug Backend Tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/backend",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["test", "--watch"],
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack",
            "configurations": ["Debug Backend", "Debug Mobile"],
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            },
            "stopAll": true
        }
    ]
}
