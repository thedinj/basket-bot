# Database
DATABASE_URL="file:./database.db"

# JWT Configuration
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_ISSUER="basket-bot"
JWT_AUDIENCE="basket-bot-api"
ACCESS_TOKEN_TTL_SECONDS=900
REFRESH_TOKEN_TTL_SECONDS=2592000

# Admin Bootstrap User
ADMIN_EMAIL="admin@basket-bot.local"
ADMIN_NAME="Admin"
ADMIN_PASSWORD="change-this-password"

# Optional: Second Test User (for testing collaboration features)
SECOND_USER_EMAIL="user@basket-bot.local"
SECOND_USER_NAME="Test User"
SECOND_USER_PASSWORD="change-this-password"

# Registration Restriction (optional)
# If set, users must provide this invitation code to register
# Leave empty or unset to allow open registration
REGISTRATION_INVITATION_CODE=""

# Server
NODE_ENV="development"
PORT=3000
