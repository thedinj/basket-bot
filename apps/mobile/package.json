{
    "name": "@basket-bot/mobile",
    "version": "0.0.1",
    "private": true,
    "description": "Ionic/Capacitor mobile application",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:prod": "cross-env CAP_DEV_SERVER=false pnpm build",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext ts,tsx",
        "ionic:build": "npm run build",
        "ionic:serve": "npm run dev",
        "cap": "cap",
        "cap:sync": "cap sync",
        "cap:sync:prod": "cross-env CAP_DEV_SERVER=false pnpm cap:sync",
        "cap:add:android": "cap add android",
        "cap:add:ios": "cap add ios",
        "cap:open:android": "cap open android",
        "cap:open:ios": "cap open ios",
        "cap:run:android": "cap run android",
        "cap:run:ios": "cap run ios",
        "android:dev": "cross-env CAP_DEV_SERVER=true pnpm cap:run:android",
        "android": "pnpm build && pnpm cap:sync && pnpm cap:run:android",
        "android:prod": "pnpm build:prod && pnpm cap:sync:prod && pnpm cap:run:android",
        "ios": "pnpm build && pnpm cap:sync && pnpm cap:run:ios",
        "ios:prod": "pnpm build:prod && pnpm cap:sync:prod && pnpm cap:run:ios"
    },
    "dependencies": {
        "@basket-bot/core": "workspace:*",
        "@capacitor-community/keep-awake": "^8.0.0",
        "@capacitor-community/sqlite": "^7.0.3",
        "@capacitor/android": "^8.0.0",
        "@capacitor/app": "^8.0.0",
        "@capacitor/camera": "^8.0.0",
        "@capacitor/core": "^8.0.0",
        "@capacitor/haptics": "^8.0.0",
        "@capacitor/ios": "^8.0.0",
        "@capacitor/keyboard": "^8.0.0",
        "@capacitor/preferences": "^8.0.0",
        "@capacitor/status-bar": "^8.0.0",
        "@hookform/resolvers": "^5.2.2",
        "@ionic/core": "^8.7.17",
        "@ionic/react": "^8.4.1",
        "@ionic/react-router": "^8.4.1",
        "@tanstack/react-query": "^5.68.2",
        "capacitor-secure-storage-plugin": "^0.13.0",
        "history": "^5.3.0",
        "ionicons": "^7.4.0",
        "pluralize": "^8.0.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.71.1",
        "react-router": "^5.3.4",
        "react-router-dom": "^5.3.4",
        "use-debounce": "^10.1.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@capacitor/assets": "^3.0.5",
        "@capacitor/cli": "^8.0.0",
        "@eslint/js": "^9.39.2",
        "@types/node": "^22.19.5",
        "@types/pluralize": "^0.0.33",
        "@types/react": "^19.0.6",
        "@types/react-dom": "^19.0.2",
        "@types/react-router": "^5.1.20",
        "@types/react-router-dom": "^5.3.3",
        "@vitejs/plugin-react": "^4.3.4",
        "cross-env": "^7.0.3",
        "eslint": "^9.18.0",
        "eslint-plugin-react-hooks": "^7.0.1",
        "sass": "^1.83.4",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.53.0",
        "vite": "^6.0.7"
    }
}
